<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/drop_down_list_header_font_color">


    <com.henghao.parkland.views.ViewPagerFixed
        android:id="@+id/image_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/text_color_t"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_big" >

        <TextView
            android:id="@+id/page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/gj_f"
            android:textColor="@color/text_color_d"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/gj_f"
            android:textColor="@color/text_color_d"
            android:text="/" />
        <TextView
            android:id="@+id/page_tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/gj_f"
            android:textColor="@color/text_color_d"
            android:text="1" />
    </LinearLayout>

</RelativeLayout>