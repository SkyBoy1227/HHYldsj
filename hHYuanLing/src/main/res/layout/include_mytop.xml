<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_mytop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_width_applycode"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_myback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_my_back" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_normal"
            android:background="@drawable/view_backcolorgrad" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_width_applycode"
            android:background="@color/app_bg"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewheader_hieght"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:src="@drawable/home_liebiao" />

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:src="@drawable/icon_share"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_root_linear"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_mytop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- 用户头像 -->

        <com.benefit.buy.library.views.CircularImageView
            android:id="@+id/user_header"
            android:layout_width="@dimen/message_wh"
            android:layout_height="@dimen/message_wh"
            android:layout_marginTop="83dp"
            android:src="@drawable/icon_avatar_default" />

        <LinearLayout
            android:id="@+id/ll_updatename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_normal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <!-- 登陆后显示登录名 -->

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_logintitle"
                android:textColor="@color/text_color_a"
                android:textSize="@dimen/gj_d" />
            <!-- 暂未登录 -->

            <TextView
                android:id="@+id/tv_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:text="@string/my_loginnotitle"
                android:textColor="@color/text_color_c"
                android:textSize="@dimen/gj_c" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_set_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="调试选项"
        android:visibility="gone" />
</RelativeLayout>