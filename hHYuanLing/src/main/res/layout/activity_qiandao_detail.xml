<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="姓名"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_name_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="姓名"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="签到时间"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_time_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="14:00"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="当前企业"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_company_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="贵州恒昊软件科技有限公司"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="签到地址"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_address_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="当前地址"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="纬度"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_latitude_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="20.34782"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="经度"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_longitude_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="106.662392"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big"
                android:text="备注"
                android:textColor="@color/text_color_e"
                android:textSize="@dimen/gj_d" />

            <TextView
                android:id="@+id/tv_comments_qiandao_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="备注"
                android:textColor="@color/text_color"
                android:textSize="@dimen/gj_d" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />
    </LinearLayout>

</LinearLayout>