<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="企业名称"
                    android:textSize="@dimen/gj_d" />

                <EditText
                    android:id="@+id/et_epName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入文字"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="企业地址"
                    android:textSize="@dimen/gj_d" />

                <EditText
                    android:id="@+id/et_epAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入文字"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="供货日期"
                    android:textSize="@dimen/gj_d" />

                <TextView
                    android:id="@+id/tv_epDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/padding_normal"
                    android:drawableRight="@drawable/icon_add"
                    android:hint="请选择日期"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="联系方式"
                    android:textSize="@dimen/gj_d" />

                <EditText
                    android:id="@+id/et_epTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="供货合同"
                    android:textSize="@dimen/gj_d" />

                <TextView
                    android:id="@+id/tv_hehong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_add"
                    android:hint="请选择图片"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_big"
                    android:text="检验检疫证"
                    android:textSize="@dimen/gj_d" />

                <TextView
                    android:id="@+id/tv_jianyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_add"
                    android:hint="请选择图片"
                    android:padding="@dimen/padding_big"
                    android:textColor="@color/text_color_c"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/gj_d" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/line" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_big"
            android:background="@drawable/btn_bluecircleframe"
            android:gravity="center"
            android:padding="@dimen/padding_big"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/gj_d" />

    </LinearLayout>

</ScrollView>