<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="养护状态：" />

        <Spinner
            android:id="@+id/sp_state_maintenace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_treemessage_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_main_button"
        android:text="植物信息录入"
        android:textColor="#ff646464"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_treeyh_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_treemessage_main"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_main_button"
        android:text="植物养护"
        android:textColor="#ff646464"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btn_yhmanage_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_treeyh_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_main_button"
        android:text="养护管理"
        android:textColor="#ff646464"
        android:textSize="14sp" />

</RelativeLayout>